{% extends "eZPlatformUIBundle::pjax_admin.html.twig" %}

{% trans_default_domain "smileezuicampaign" %}

{% set editTitle = campaignList.new ? "campaign.list.create.title"|trans() : "campaign.list.edit.title"|trans({"%identifier%": campaignList.id}) %}

{% block title %}
    {{ editTitle }}
{% endblock %}

{% block header_breadcrumbs %}
    {% set breadcrumb_items = [
        {link: path('smileezcampaign_campaign'), label: 'Campaign'|trans},
        {link: null, label: editTitle}
    ] %}
    {{ parent() }}
{% endblock %}

{% block header_title %}
    <h1 class="ez-page-header-name" data-icon="&#xe91f;">
        {{ editTitle }}
    </h1>
{% endblock %}

{% block content %}
    <section class="ez-serverside-content">
        {{ form_start(form, {'action': actionUrl, "attr": {"class": "pure-form pure-form-aligned"}}) }}
        {{ form_errors(form) }}

        <fieldset>
            <div class="pure-control-group">
                {{ form_label(form.name) }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
            </div>

            <div class="pure-control-group">
                {{ form_label(form.company) }}
                {{ form_errors(form.company) }}
                {{ form_widget(form.company) }}
            </div>

            <div class="pure-control-group">
                {{ form_label(form.address) }}
                {{ form_errors(form.address) }}
                {{ form_widget(form.address) }}
            </div>

            <div class="pure-control-group">
                {{ form_label(form.city) }}
                {{ form_errors(form.city) }}
                {{ form_widget(form.city) }}
            </div>

            <div class="pure-control-group">
                {{ form_label(form.state) }}
                {{ form_errors(form.state) }}
                {{ form_widget(form.state) }}
            </div>

            <div class="pure-control-group">
                {{ form_label(form.zip) }}
                {{ form_errors(form.zip) }}
                {{ form_widget(form.zip) }}
            </div>

            <div class="pure-control-group">
                {{ form_label(form.country) }}
                {{ form_errors(form.country) }}
                {{ form_widget(form.country) }}
            </div>
        </fieldset>

        <div class="pure-controls">
            <a href="{{ path("smileezcampaign_campaign") }}"
               class="pure-button ez-button">{{ "campaign.cancel"|trans }}</a>
            {{ form_widget(form.save, {"attr": {"class": "pure-button ez-button"}}) }}
        </div>

        {{ form_end(form) }}
    </section>
{% endblock %}
