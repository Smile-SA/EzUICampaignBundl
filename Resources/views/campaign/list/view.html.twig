{% extends "eZPlatformUIBundle::pjax_admin.html.twig" %}

{% trans_default_domain "smileezuicampaign" %}

{% block title %}
{% endblock %}

{% block header_breadcrumbs %}
    {% set breadcrumb_items = [
        {link: path('smileezcampaign_campaign', {'tabItem': 'lists'}), label: 'Campaigns'|trans},
        {link: null, label: list.name}
    ] %}
    {{ parent() }}
{% endblock %}

{% block header_title %}
    <h1 class="ez-page-header-name" data-icon="&#xe91f;">
        {{ list.name }} [{{ list.id }}]
    </h1>
{% endblock %}

{% block content %}
    <section class="ez-serverside-content">
        <section class="smileezuicampaign-view">
            <div class="smileezuicampaign-metadata">
                <div class="smileezuicampaign-metadata-name">{{ "list.name"|trans|desc("Name") }}</div>
                <div class="smileezuicampaign-metadata-value">{{ list.name }}</div>
            </div>

            <div class="ez-toolbar">
                <a href="{{ path('smileezcampaign_list_edit', {'campaignListID': list.id}) }}" class="pure-button ez-button" data-icon="&#xe606;">{{ 'list.edit'|trans|desc("Edit") }}</a>
            </div>
        </section>
    </section>
{% endblock %}
