
<table class="ezconf-list pure-table pure-table-striped">
    <thead>
        <tr>
            <th>{{ 'ID'|trans }}</th>
            <th>{{ 'Title'|trans }}</th>
            <th>{{ 'Subject'|trans }}</th>
            <th>{{ 'Create time'|trans }}</th>
            <th>{{ 'Status'|trans }}</th>
            <th>{{ 'Emails sent'|trans }}</th>
            <th>{{ 'Send time'|trans }}</th>
            <th>{{ 'List name'|trans }}</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        {% for campaign in params.campaigns.campaigns %}
            <tr>
                <td>{{ campaign.id }}</td>
                <td><a href="{{ path("smileezcampaign_campaign_view", {"id": campaign.id}) }}">{{ campaign.settings.title }}</a></td>
                <td>{{ campaign.settings.subject_line }}</td>
                <td>{{ campaign.create_time }}</td>
                <td>{{ campaign.status }}</td>
                <td>{{ campaign.emails_sent }}</td>
                <td>{{ campaign.send_time }}</td>
                <td>{{ campaign.recipients.list_name }}</td>
                <td></td>
                <td></td>
            </tr>
        {% endfor %}

    </tbody>
</table>

<p class="ez-table-data-buttons">
    <a href="{{ path('smileezcampaign_campaign_edit') }}" class="pure-button ez-button" data-icon="&#xe616;">{{ 'compaign.new'|trans }}</a>
    <a href="{{ path('smileezcampaign_folder_edit') }}" class="pure-button ez-button" data-icon="&#xe616;">{{ 'compaign.folder.new'|trans }}</a>
</p>
