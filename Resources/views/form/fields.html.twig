{% block campaign_widget %}
    {% spaceless %}
        {{ block('search_widget') }}
    {% endspaceless %}
{% endblock %}

{% block campaignfolder_widget %}
    {% spaceless %}
        {%- set type = type|default('search') -%}
        <input data-action="{{ path('smileezcampaign_folder_all') }}" type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
    {% endspaceless %}
{% endblock %}

{% block campaignlist_widget %}
    {% spaceless %}
        {%- set type = type|default('search') -%}
        <input data-action="{{ path('smileezcampaign_list_all') }}" type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
    {% endspaceless %}
{% endblock %}
